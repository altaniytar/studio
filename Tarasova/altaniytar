<!DOCTYPE html>
<html>
 <head>
  <title>canvas</title>
  <meta charset="utf-8">

  <canvas id="smile" width="320" height="420">
    <p>Ваш браузер не поддерживает рисование.</p>
  </canvas>
  
   
<script type="text/javascript">
    var myCanvas = document.getElementById('smile');

     var cxt = myCanvas.getContext('2d');
	 
	 cxt.fillStyle = "Red";
cxt.strokeStyle = "#FF0000";
cxt.font = "italic 18pt Arial";
cxt.fillText("Цветной карандаш", 70, 40)
     
     // Рисуем прямоугольник
 	cxt.fillStyle="pink";
	cxt.fillRect(100,90,205,15);
	
	// Рисуем прямоугольник
 	cxt.fillStyle="magenta";
	cxt.fillRect(100,105,205,15);
	
     // Рисуем еще прямоугольник
	cxt.fillStile= 5; 
 	cxt.fillStyle = 'crimson' ;
	cxt.fillRect(100,120,205,15);
	
  // рисуем конус карандаша
	cxt.fillStyle = '#FFCC80';
	cxt.moveTo(100,90) ;
	cxt.lineTo(25, 115,30,20);
	cxt.lineTo(100,135);
	cxt.fill();
      
	
ctx.beginPath();
ctx.moveTo(100,100);
ctx.lineTo(200,200);
ctx.lineTo(300,100);
ctx.closePath();
ctx.strokeStyle = '#FF0000';
ctx.lineWidth = 8;
ctx.stroke();
ctx.fillStyle = '#0000FF';
ctx.fill();



      ctx.resetTransform();
      ctx.closePath();

      // красим
      cxt.fillStyle = '#8ED6FF';
      cxt.fill();
      cxt.lineWidth = 5;
      cxt.strokeStyle = 'black';
      cxt.stroke();

  </script>
 </head>
